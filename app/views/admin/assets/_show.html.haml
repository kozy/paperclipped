%p.content
  %label.filename
    = t('filename') + " #{@asset.asset_file_name unless @asset.new_record?}"
  .asset
    - if @asset.image?
      = image_tag @asset.thumbnail(Radiant::Config['assets.display_size'].to_sym)
    - else
      = link_to image_tag(@asset.thumbnail(:thumbnail)), @asset.asset.url
